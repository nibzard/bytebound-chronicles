{
  "name": "bytebound-chronicles",
  "version": "0.2.0",
  "description": "A Terminal LLM Adventure Game with intelligent AI orchestration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/api/server.ts",
    "dev:client": "tsx watch src/client/index.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "start": "node dist/api/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,json}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "setup-db": "tsx scripts/setup-database.ts",
    "db:migrate": "tsx scripts/migrate-database.ts",
    "db:seed": "tsx scripts/seed-database.ts",
    "db:reset": "tsx scripts/reset-database.ts",
    "validate:stories": "tsx scripts/validate-stories.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "adventure-game",
    "llm",
    "terminal",
    "ai",
    "typescript",
    "fastify",
    "react-ink"
  ],
  "author": "Bytebound Chronicles Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@fastify/swagger": "^8.12.0",
    "@fastify/websocket": "^8.3.1",
    "@google/generative-ai": "^0.2.1",
    "@libsql/client": "^0.4.3",
    "@sinclair/typebox": "^0.31.28",
    "better-sqlite3": "^11.5.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "fastify": "^4.24.3",
    "ink": "^4.4.1",
    "lmdb": "^2.8.5",
    "nanoid": "^5.0.4",
    "pino": "^8.16.2",
    "react": "^18.2.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.45",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=20.0.0 <23.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run typecheck && npm run test:unit"
    }
  }
}